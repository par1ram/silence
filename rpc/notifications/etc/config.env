# Notifications Service Configuration

# HTTP Server
HTTP_PORT=8080
HTTP_READ_TIMEOUT=30s
HTTP_WRITE_TIMEOUT=30s
HTTP_IDLE_TIMEOUT=60s

# RabbitMQ Configuration
NOTIFICATIONS_RABBITMQ_URL=amqp://admin:admin@rabbitmq:5672/
RABBITMQ_EXCHANGE=notifications
RABBITMQ_QUEUE=notifications_queue
RABBITMQ_ROUTING_KEY=notifications.*
RABBITMQ_CONSUMER_TAG=notifications_consumer
RABBITMQ_PREFETCH_COUNT=10

# External Services
ANALYTICS_URL=http://analytics:8080

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Version
VERSION=1.0.0

# Performance
WORKER_POOL_SIZE=10
BATCH_SIZE=100
BATCH_TIMEOUT=5s

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=1s
RETRY_BACKOFF=2
