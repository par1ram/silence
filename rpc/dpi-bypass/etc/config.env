# DPI Bypass Service Configuration

# HTTP Server
HTTP_PORT=8083
GRPC_PORT=9083
HTTP_READ_TIMEOUT=30s
HTTP_WRITE_TIMEOUT=30s
HTTP_IDLE_TIMEOUT=60s

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=

# Version
VERSION=1.0.0

# DPI Bypass Configuration
DPI_METHODS=domain_fronting,packet_fragmentation,tls_camouflage,tcp_segmentation
DEFAULT_METHOD=domain_fronting
MAX_CONCURRENT_CONNECTIONS=5000
CONNECTION_TIMEOUT=30s
FRAGMENT_SIZE=1400
CAMOUFLAGE_DOMAINS=google.com,cloudflare.com,amazonaws.com

# Performance Settings
WORKER_POOL_SIZE=20
QUEUE_SIZE=10000
BUFFER_SIZE=64k
KEEP_ALIVE_TIMEOUT=300s

# Security
INTERNAL_API_TOKEN=super-secret-internal-token
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=1m

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9103
HEALTH_CHECK_INTERVAL=30s
